{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 25,
  "hostRules": [
    {
      "matchHost": "maven.pkg.github.com",
      "hostType": "maven",
      "token": "{{ secrets.RENOVATE_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Create a single PR (monorepo style) for dependencies of the same group id.",
      "matchManagers": [
        "gradle"
      ],
      "matchFileNames": [
        "gradle/libs.versions.toml"
      ],
      "groupName": "grouped dependencies",
      "groupSlug": "grouped-dependencies",
      "separateMultipleMajor": false,
      "matchPackageNames": [
        "/^org\\.jetbrains\\.compose/",
        "/^org\\.jetbrains\\.kotlin/",
        "/^io\\.github\\.manamiproject/"
      ]
    }
  ]
}
